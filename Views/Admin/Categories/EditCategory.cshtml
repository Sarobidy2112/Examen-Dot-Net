@model examDotNet.Models.Categorie

@{
    ViewData["Title"] = "Modifier la Catégorie";
    ViewData["ShowHeader"] = false;
    ViewData["ShowFooter"] = false;
    ViewData["SlideBarAdmin"] = true;
    ViewData["UseSlideBarAdminStyles"] = true;

}

@section Styles {
    <link rel="stylesheet" href="~/css/adminuser.css" asp-append-version="true" />
}


<h1>Modifier la Catégorie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_categorie" />
            <div class="form-group">
                <label asp-for="nom_categorie" class="control-label">Nom de la catégorie</label>
                <input asp-for="nom_categorie" class="form-control" />
                <span asp-validation-for="nom_categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Categories" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
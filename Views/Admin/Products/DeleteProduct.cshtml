@model examDotNet.Models.Produit

@{
    ViewData["Title"] = "Supprimer le Produit";
    ViewData["ShowHeader"] = false;
    ViewData["ShowFooter"] = false;
    ViewData["SlideBarAdmin"] = true;
    ViewData["UseSlideBarAdminStyles"] = true;
    ViewData["UseBootstrap"] = true;

}

@section Styles {
    <link rel="stylesheet" href="~/css/admindelete.css" asp-append-version="true" />
}



<div class="category-deletion-container">
    <header class="deletion-header">
        <h1>Supprimer le Produit</h1>
        <p class="subtitle">Gérez vos produits en toute simplicité</p>
    </header>

    <div class="deletion-card">
        <div class="deletion-card-header">
            <h2>Supprimer le Produit</h2>
            <div class="warning-message">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
                <h3>Action irréversible</h3>
            </div>
            <p class="confirmation-text">Êtes-vous absolument sûr de vouloir supprimer ce produit ?</p>
        </div>

        <div class="category-details-block">
            <h4>@Model.NomProduit</h4>
            <div class="divider"></div>
            
            <dl class="row">
                <dt class="col-sm-2">Prix</dt>
                <dd class="col-sm-10">@Model.Prix €</dd>

                <dt class="col-sm-2">Catégorie</dt>
                <dd class="col-sm-10">@Model.Categorie.nom_categorie</dd>
            </dl>

            <form asp-action="DeleteProduct" class="delete-category-form">
                <input type="hidden" asp-for="IdProduit" />
                <div class="form-actions">
                    <button type="submit" class="btn-delete">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg>
                        Confirmer la suppression
                    </button>
                    <a asp-action="Products" class="btn-cancel">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                        Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

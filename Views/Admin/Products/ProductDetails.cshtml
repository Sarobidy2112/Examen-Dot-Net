@model examDotNet.Models.Produit

@{
    ViewData["Title"] = "Détails du Produit";
}

<h1>Détails du Produit</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdProduit</dd>
        
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.NomProduit</dd>
        
        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@Model.Prix €</dd>
        
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">Catégorie</dt>
        <dd class="col-sm-10">@Model.Categorie.nom_categorie</dd>
    </dl>
</div>
<div>
    <a asp-action="EditProduct" asp-route-id="@Model.IdProduit" class="btn btn-primary">Modifier</a>
    <a asp-action="Products" class="btn btn-secondary">Retour à la liste</a>
</div>
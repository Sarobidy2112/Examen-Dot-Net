@model examDotNet.Models.Produit

@{
    ViewData["Title"] = "Créer un Produit";
}

<h1>Créer un Produit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct" method="post">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }


           @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                    </ul>
                </div>
            }


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NomProduit" class="control-label">Nom du produit</label>
                <input asp-for="NomProduit" class="form-control" />
                <span asp-validation-for="NomProduit" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Prix" class="control-label">Prix (€)</label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <select asp-for="IdCat" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Sélectionnez une catégorie --</option>
                </select>
                <span asp-validation-for="IdCat" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer</button>
                <a asp-action="Products" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
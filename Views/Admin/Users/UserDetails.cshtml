@model examDotNet.Models.User

@{
    ViewData["Title"] = "Détails de l'Utilisateur";
}

<h1>Détails de l'Utilisateur</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Rôle</dt>
        <dd class="col-sm-10">@(Model.Role == 0 ? "Utilisateur" : "Admin")</dd>
    </dl>
</div>
<div>
    <a asp-action="Users" class="btn btn-secondary">Retour à la liste</a>
</div>
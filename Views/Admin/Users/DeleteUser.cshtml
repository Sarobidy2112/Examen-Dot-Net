@model examDotNet.Models.User

@{
    ViewData["Title"] = "Supprimer l'Utilisateur";
}

<h1>Supprimer l'Utilisateur</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</h3>
<div>
    @* <h4>@Model.Name</h4> *@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
    
    <form asp-action="DeleteUser">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Users" class="btn btn-secondary">Annuler</a>
    </form>
</div>
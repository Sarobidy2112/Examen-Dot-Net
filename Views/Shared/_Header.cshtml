
    <nav class="navbar">
        <div class="logo">
            <h1>REC <span>Sound</span></h1>
        </div>

        <div class="links">
            <ul>
                <li><a href="#">Les Produits</a></li>
                @if (Context.Session.GetInt32("UserRole") == 1){
                    <li><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>   
                }
                <li><a href="#">Favoris</a></li>
                <li><a href="#">A propos</a></li>
            </ul>
            <div class="cart">
                <i class="icon fas fa-shopping-cart"></i>
            </div>
        </div>

        <div class="action">

            @if (Context.Session.GetInt32("UserId") == null)
            {
                <a asp-controller="Auth" asp-action="Register">
                    <button class="btn btn-register">S'inscrire</button>
                </a>
                <a asp-controller="Auth" asp-action="Login">
                    <button class="btn btn-login">Se connecter</button>
                </a>
            }
            else
            {
                <div class="user-info">
                    <i class="fas fa-user icon-user"></i>
                    <p>@(Context.Session.GetInt32("UserName"))</p>
                </div>

                <a asp-controller="Auth" asp-action="Logout">
                    <button class="btn btn-logout">Se Deconnecter</button>
                </a>
            }
        </div>
    </nav>
    
